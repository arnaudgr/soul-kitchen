<h2>Se connecter</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>

  <div class="field">
    <%= f.label :password, 'Mot de passe' %><br />
    <%= f.password_field :password, autocomplete: "Mot de passe" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Se connecter" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

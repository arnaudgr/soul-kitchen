<div class="form_width">
  <div class="contact-form-area">
  <div class="col-12">

  <div class="card">


<h2 class ="actions">Se connecter</h2>
<div class="contact-form-area">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%-#  <%= f.label :email -%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Votre email", id: "session_email"%>
  </div>

  <p></p>
 
  <div class="field">
    <%-# <%= f.label :password -%>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control",  placeholder: "Votre mot de passe", id: "session_pass" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Se souvenir de moi" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Se connecter", class: "btn-blue", id: "session_btn" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
  </div>

</div>

</div>
</div>
</div>
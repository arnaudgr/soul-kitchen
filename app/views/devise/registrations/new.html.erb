<div class="contact-form-area">
 <div class="col-12">
   <div class="card">
     <h2>Inscription</h2>

     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= devise_error_messages! %>

       <div class="field">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email" %>
       </div>

       <div class="field">
         <% if @minimum_password_length %>
         <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
         <% end %><br />
         <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Mot de passe" %>
       </div>

       <div class="field">
         <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmation du mot de passe" %>
       </div>

       <div class="actions">
         <%= f.submit "S'inscrire", class: "btn" %>
       </div>
     <% end %>

     <%= render "devise/shared/links" %>
   </div>
 </div>
</div>
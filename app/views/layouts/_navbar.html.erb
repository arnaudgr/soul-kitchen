                        <a class="nav-brand" href="index.html"> <%=image_tag 'soullogo.png', :height => '200', :width => '200'%> </a>

                        <!-- Navbar Toggler -->
                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler"><span></span><span></span><span></span></span>

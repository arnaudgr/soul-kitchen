<div class="col-12 col-lg-4">
    <div class="newsletter-area">
       <h4>Inscrivez-vous à notre newsletter</h4>
                        <!-- Form -->
           <div class="newsletter-form bg-img bg-overlay" style="background-image: url(<%= asset_path 'bg4.jpg'%>);">
                          
                          <%= form_for (Subscriber.new) do |f| %>
   
                        <%= f.text_field :name, class: 'form-control', placeholder:'Nom' %>
                        <%= f.text_field :email, class: 'form-control', placeholder:'Email' %>
                        <%= f.submit class:"btn delicious-btn w-100", placeholder:'Je veux me tenir au courant'%>
                        <% end %>
                        <p> Pour se tenir au courant de nos dernières recettes & actualités fumantes ! </p>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-4">
                    <div class="delicious-add">
                        <%=image_tag ('insta2.jpg') %>
                    </div>
                </div>
                